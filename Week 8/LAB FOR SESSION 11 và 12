<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>ex03</title>
</head>
<body>

<script>
  let txta = prompt("Enter any integer");

  if (txta === null || txta.trim() === "" || isNaN(txta)) {
    document.write("<span style='color:red;'>You must enter a number</span>");
  } else {
    let number = parseInt(txta, 10);
    if (number % 2 === 0) {
      document.write("<span style='color:green; font-weight:bold;'>" + number + " is an even number</span>");
    } else {
      document.write("<span style='color:blue; font-style:italic;'>" + number + " is an odd number</span>");
    }
  }
</script>

</body>
</html>
